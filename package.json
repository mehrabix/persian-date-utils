{
  "name": "persian-date-utils",
  "version": "1.0.0",
  "description": "A utility library for Persian (Shamsi) date formatting and conversion",
  "type": "module",
  "scripts": {
    "build": "rslib build",
    "check": "biome check --write",
    "dev": "rslib build --watch",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@eslint/js": "^9.12.0",
    "@rslib/core": "^0.3.1",
    "@types/node": "^22.8.1",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^2.1.8"
  },
  "private": false
}
